<main>
    <section class="shop-section">
        <div class="container">
            <p class="text-center billing-alert">Thank you. Your order has been received.</p>
            <div class="row mb-5">
                <div class="col-md-6 mb-4 mb-xl-0">
                    <div class="confirmation-card">
                        <h3 class="billing-title">Order Info</h3>
                        <div class="row">
                            <div class="col-3">
                                <p>Order number</p>
                                <p>Date</p>
                                <p>Note</p>
                                <p>Total</p>
                            </div>
                            {{#with order}}
                            <div class="col-9">
                                <p>: {{id}}</p>
                                <p>: {{dateFormat this.[created_at]}}</p>
                                <p>: {{note}}</p>
                                <p>: {{currencyFormat total}}</p>
                            </div>
                            {{/with}}
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4 mb-xl-0">
                    <div class="confirmation-card">
                        <h3 class="billing-title">Shipping Address</h3>
                        <div class="row">
                            <div class="col-3">
                                <p>Receiver</p>
                                <p>Telephone</p>
                                <p>Address</p>
                                <p>City</p>
                            </div>
                            {{#with order}}
                            <div class="col-9">
                                <p>: {{'receiver_address.receiver_name'}}</p>
                                <p>: {{'receiver_address.telephone'}}</p>
                                <p>: {{'receiver_address.specific_address'}}</p>
                                <p>: Phường {{'receiver_address.ward'}}, Quận {{'receiver_address.district'}},
                                    {{'receiver_address.city'}}</p>
                            </div>
                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="order-details-table">
                <h2>Order Details</h2>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each detail }}
                            <tr>
                                <td>
                                    <p>{{'product.name'}} - Size: {{size}}</p>
                                </td>
                                <td>
                                    <h5>{{quantity}}</h5>
                                </td>
                                <td>
                                    <p>{{price}}</p>
                                </td>
                            </tr>
                            {{/each}}                            
                            <tr>
                                <td>
                                    <h4>Subtotal</h4>
                                </td>
                                <td>
                                    <h5></h5>
                                </td>
                                <td>
                                    <p>{{currencyFormat totalWOShip}}</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4>Shipping</h4>
                                </td>
                                <td>
                                    <h5></h5>
                                </td>
                                <td>
                                    <p>{{currencyFormat 15000}}</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4>Total</h4>
                                </td>
                                <td>
                                    <h5></h5>
                                </td>
                                <td>
                                    <h4>{{currencyFormat order.[total]}}</h4>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</main>