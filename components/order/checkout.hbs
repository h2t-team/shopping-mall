<main>
    <section class="shop-section">
        <div class="container">
            <div class="delivery mb-4 border">
                <div class="decor mb-2"></div>
                <div class="content m-4">
                    <h4 class="text-primary"><i class="fas fa-map-marker-alt mx-3 mb-4"></i> Delivery Address</h4>
                    {{#with firstAddress}}
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="address" id={{id}} value={{id}} checked>
                        <label class="form-check-label" for={{id}}>
                            <span class="fw-bold me-3">{{'receiver_name'}} {{telephone}}</span>{{'specific_address'}},
                            Phường {{ward}}, Quận {{district}}, {{city}}
                        </label>
                    </div>
                    {{/with}}
                    {{#each otherAddress }}
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="address" id={{id}} value={{id}}>
                        <label class="form-check-label" for={{id}}>
                            <span class="fw-bold me-3">{{'receiver_name'}} {{telephone}}</span>{{'specific_address'}},
                            Phường {{ward}}, Quận {{district}}, {{city}}
                        </label>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="order px-sm-5 px-4 py-4 mb-3 border">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" style="min-width: 300px;">Product Ordered</th>
                                <th scope="col">Price</th>
                                <th scope="col">Size</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each product }}
                            <tr>
                                <input type="hidden" value={{'product_id'}}>
                                <td>
                                    <div class="media">
                                        <div class="d-flex">
                                            <img src={{'product.product_images.image_url'}} alt="product-image" />
                                            <div class="media-body ms-3 ms-lg-5 fs-6 w-100">
                                                <p>{{'product.name'}}</p>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h5>{{currencyFormat this.[product.price]}}</h5>
                                </td>
                                <td class="qty text-center">
                                    <h5>{{quantity}}</h5>
                                </td>
                                <td class="size text-center">
                                    <h5>{{size}}</h5>
                                </td>
                                <td class="total text-center">
                                    <h5>{{currencyFormat total}}</h5>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 pt-2">
                        <label for="message" class="form-label">Message (Optional)</label>
                        <input type="text" name="message" id="message" class="form-control"
                            placeholder="Leave Message for Seller">
                    </div>
                    <div class="col-lg-6">
                        <div class="d-flex justify-content-end pt-3 flex-wrap">
                            <h5 class="my-1">Sub Total:</h5>
                            <h5 class="ms-3 my-1">{{currencyFormat total}}</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="summary px-sm-5 px-4 mb-3 border">
                <div class="py-3 border-bottom row">
                    <div class="col-md-8 offset-md-4 col-xl-6 offset-xl-6 col-xxl-4 offset-xxl-8">
                        <div class="row my-3">
                            <div class="col-sm-6 text-sm-start text-end">Merchandise Subtotal:</div>
                            <div class="col-sm-6 text-end fw-bold">{{currencyFormat total}}</div>
                        </div>
                        <div class="row my-3 ">
                            <div class="col-sm-6 text-sm-start text-end">Shipping Total:</div>
                            <div class="col-sm-6 text-end fw-bold">{{currencyFormat 15000}}</div>
                        </div>
                        <div class="row my-3">
                            <div class="col-sm-6 text-sm-start text-end fw-bold d-flex align-items-center justify-content-sm-start justify-content-end fs-4 text-uppercase">
                                Order Total:
                            </div>
                            <div id="order-total" class="col-sm-6 text-end text-primary fs-3 fw-bold">{{currencyFormat totalWithShip}}</div>
                        </div>
                    </div>
                </div>
                <div class="d-flex py-3 justify-content-end">
                    <a class="btn rounded-pill" id="create-order" href="javascript:void(0)">Place Order</a>
                </div>
            </div>
            </div>
    </section>
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="failed-toast" class="toast align-items-center text-white bg-danger border-0" role="alert"
            aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    Can not place order. Please fill in your information.
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                    aria-label="Close"></button>
            </div>
        </div>
    </div>
</main>