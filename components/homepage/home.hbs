    </section>
    <section class="homepage-section mb-0">
        <div class="container">
            <div class="section-intro">
                <p class="mb-1">Popular Item in the market</p>
                <h2 class="section-title fw-bold mb-2">Best <span class="section-title-style pb-2">Seller</span></h2>
            </div>
            <div class="row">
                {{#each bestSellers}}
                <div class="col-6 col-lg-4 col-xl-3 px-1 px-sm-3 d-flex flex-column">
                    <div class="product-card text-center mb-4">
                        <a class="product-img position-relative" href="/product/{{id}}">
                            <img src="{{'product_images.image_url'}}"
                                alt="">
                        </a>
                        <div class="product-info">
                            <p>{{'category.name'}}</p>
                            <a href="/product/{{id}}" class="product-info-name mb-2">{{name}}</a>
                            <p class="product-price">{{currencyFormat price}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
        </div>
    </section>
    <section class="subscribe">
