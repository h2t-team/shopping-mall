<div class="container d-flex justify-content-center align-items-center vh-100">
<div class="card">
    <div class="mb-5" style="border-radius:200px; height:200px; width:200px; background: #F8FAF5; margin:0 auto;">
        <i class="checkmark">âœ“</i>
    </div>
    <p>
      A
      <span id="type">{{type}}</span>
      email has been sent to 
      <span class="fw-bold" id="email">{{email}}</span>
      (expire after 20 minutes) 
    </p>
    <p>
      Don't receive the {{type}} email? Click on 
      <a href="#" class="fw-bold text-decoration-underline" id="resend">Resend</a>
    </p>
</div>
   <script>
      $('#resend').click(function(e) {
        const email=document.getElementById("email").textContent;
        const type=document.getElementById("type").textContent;
        $.ajax({
          contentType: "application/json",
          url: '/auth/resend-email',
          dataType: "json",
          type: 'POST', // http method
          data: JSON.stringify({email:email,type:type}), // data to submit
        })
      });
   </script>
</div>
