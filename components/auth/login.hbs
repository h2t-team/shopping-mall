<main>
    <div class="shop-section">
        <div class="login container mt-5 mb-5">
            <div class="row">
                <div class="col-lg-6 px-lg-0">
                    <div class="side-box">
                        <div class="context text-center">
                            <h3 class="pb-3 fw-bold">New to our website?</h3>
                            <p class="pb-4">Join us now</p>
                            <a href="/auth/register">Create an Account</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 px-lg-0">
                    <div class="login-box py-5">
                        <h3 class="text-uppercase text-center mb-5 fw-bold">Log in to enter</h3>
                        <form method="post" class="row login-form mx-auto">
                            {{#if message}}
                            <div class="col=md-12 mb-3">
                                <div class="error">
                                    <i class="fas fa-times-circle me-2"></i>
                                    <span>{{message}}</span>
                                </div>
                            </div>
                            {{/if}}
                            <div class="col-md-12 mb-3">
                                <input class="form-control" type="text" name="username" placeholder="Username" />
                            </div>
                            <div class="col-md-12 mb-3">
                                <input class="form-control" type="password" name="password" placeholder="Password" />
                            </div>
                            <div class="col-md-12 mb-3">
                                <input class="form-check-input m-1" type="checkbox" id="keep-logged" />
                                <label class="form-check-label" for="keep-logged">Keep me logged in</label>
                            </div>
                            <div class="col-md-12 mb-3 text-center d-flex flex-column align-items-center">
                                <input class="form-control mb-2 w-75" type="submit" value="Log In" />
                                <a href="/auth/forgot-password" class="text-decoration-underline mt-3">Forgot
                                    Password?</a>
                            </div>
                            <div class="col-md-12 text-center d-flex  align-items-center flex-column flex-sm-row">
                                <label class="form-check-label mb-3" for="keep-logged">Login with</label>
                                <div class="d-flex justify-content-evenly col">
                                    <div class="kpx_row-sm-offset-3 widgets-socialButtons mx-3">
                                        <div class="login-other-logo"> 
                                            <a  href="/auth/google" class="mb-3 btn btn-google" data-toggle="tooltip"
                                                data-placement="top" title="Google Plus">
                                            <i class="bi bi-google"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="kpx_row-sm-offset-3 widgets-socialButtons mx-3">
                                        <div class="login-other-logo"> 
                                            <a  href="/auth/facebook" class="mb-3 btn btn-facebook" data-toggle="tooltip"
                                                data-placement="top" title="Facebook">
                                            <i class="bi bi-facebook"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>