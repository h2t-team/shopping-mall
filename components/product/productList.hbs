<main>
    <section class="shop-section mb-5">
        <div class="container">
            <div class="row">
                <div class="col-xl-3 col-lg-4 col-md-5">
                    <form id="filterForm">
                        <div class="shop-sidebar mb-4">
                            <h3 class="shop-sidebar-heading px-4 fw-normal">Product Filter</h3>
                            <div class="shop-sidebar-list pb-4 px-4 bg-light">
                                <div class="head">Categories</div>
                                <div class="shop-sidebar-type">
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" 
                                            name="category" checked id='0' value="0">
                                        <label class="form-check-label" for='0'>
                                            All
                                        </label>
                                    </div>
                                    {{#each category}}
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" 
                                        name="category" {{{radioChecked id ../catOption}}} 
                                        id={{id}}  value="{{id}}">
                                        <label class="form-check-label" for={{id}}>
                                            {{name}} ({{total_products}})
                                        </label>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                            <div class="shop-sidebar-list pb-4 px-4 bg-light">
                                <div class="head">Price</div>
                                <div class="shop-sidebar-type">
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" 
                                            name="price" id="999000-10000000" value="999000-10000000" {{radioChecked '999000-10000000' priceOption}}>
                                        <label class="form-check-label" for='999000-10000000'>
                                            Higher than {{currencyFormat 999000}}
                                        </label>
                                    </div>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" 
                                            name="price" id="499000-999000" value="499000-999000" {{radioChecked '499000-999000' priceOption}}>
                                        <label class="form-check-label" for='499000-999000'>
                                            {{currencyFormat 499000}} - {{currencyFormat 999000}}
                                        </label>
                                    </div>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" 
                                            name="price" id="199000-499000" value="199000-499000" {{radioChecked '199000-499000' priceOption}}>
                                        <label class="form-check-label" for='199000-499000'>
                                            {{currencyFormat 199000}} - {{currencyFormat 499000}}
                                        </label>
                                    </div>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" 
                                            name="price" id="1000-199000" value="1000-199000" {{radioChecked '1000-199000' priceOption}}>
                                        <label class="form-check-label" for='1000-199000'>
                                            Lower than {{currencyFormat 199000}}
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="shop-sidebar-list pb-4 px-4 bg-light">
                                <div class="head">Ratings</div>
                                <div class="shop-sidebar-type">
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" 
                                            name="rating" id="5stars" value="5" {{radioChecked 5 ratingOption}}>
                                        <label class="form-check-label" for='5stars'>
                                            <div>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                            </div>
                                        </label>
                                    </div>
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" 
                                            name="rating" id="4stars" value="4" {{radioChecked 4 ratingOption}}>
                                        <label class="form-check-label" for='4stars'>
                                            <div>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-xl-9 col-lg-8 col-md-7">
                    <div class="bg-light mb-4 px-3 pb-3 d-flex align-items-center flex-wrap justify-content-between">
                        <form id="searchForm" action="/product" method="get">
                            <div class="mt-3 input-group">
                                <input type="text" name="keyword" class="form-control" id="shop-search" placeholder="Search" value="{{keyword}}" autocomplete="off">
                            </div>
                        </form>
                        <div class="mt-3">
                            <select  id="sort_select" class="form-select">
                                <option id="default" {{{selectSelected "default" sortOption}}}>Default</option>
                                <option id="desc" {{{selectSelected "desc" sortOption}}}>Price: High to Low</option>
                                <option id="asc" {{{selectSelected "asc" sortOption}}}>Price: Low to High</option>
                            </select>
                        </div>  
                    </div>
                    <div class="row">
                        {{#each products.rows}}
                        <div class="col-6 col-lg-4 px-1 px-sm-3 d-flex flex-column">
                            <div class="product-card text-center mb-4">
                                <a class="product-img position-relative" href="/product/{{id}}">
                                    <img src={{'product_images.image_url'}} alt="">
                                </a>
                                <div class="product-info">
                                    <p>{{'category.name'}}</p>
                                    <a href="/product/{{id}}" class="product-info-name mb-2">{{name}}</a>
                                    <p class="product-price">{{currencyFormat price}}</p>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <div
                    class="offset-xl-3 offset-lg-4 offset-md-5 col-xl-9 col-lg-8 col-md-7 page-nav d-flex justify-content-center">
                    <ul class="d-flex">
                        {{#page products.count.length page url}}
                        {{/page}}
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section class="subscribe">
        <div class="container">
            <div class="subscribe-container text-center">
                <h3 class="subscribe-title text-uppercase mb-3">GET UPDATE FROM ANYWHERE</h3>
                <p class="mb-3">Bearing Void gathering light light his eavening unto dont afraid</p>
                <form class="mt-5 pt-1">
                    <div class="row justify-content-center align-items-center">
                        <div class="col-sm-6 col-lg-3">
                            <input type="email" placeholder="Your Email Address"
                                class="input-subscribe rounded-pill form-control mb-3 h-100 py-2 px-3">
                        </div>
                        <div class="col-auto">
                            <button class="btn rounded-pill mb-3">Subscribe Now</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>