<main>
    <div class="shop-section">
        <div class="container">
            <div class="card mb-5">
                <div class="row g-0 p-5">
                    <div class="d-flex justify-content-between align-items-center px-4">
                        <h4 class="fw-bold">My Addresses</h4>
                        <a href="#" class="btn"><i class="fas fa-plus me-2"></i>Add New Address</a>
                    </div>
                    <div class="col-lg-12 p-4">
                        {{#each addresses }}
                        <div class="border-top p-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="address-item">
                                    <div class="address-detail d-flex">
                                        <div class="label">Full Name</div>
                                        <div class="content">
                                            <h6>{{'receiver_name'}}</h6>
                                        </div>
                                    </div>
                                    <div class="address-detail d-flex">
                                        <div class="label">Telephone</div>
                                        <div class="content">{{telephone}}</div>
                                    </div>
                                    <div class="address-detail d-flex">
                                        <div class="label">Address</div>
                                        <div class="content">
                                            <span>{{'specific_address'}}</span>
                                            <br>
                                            <span>Phường {{ward}}</span>
                                            <br>
                                            <span>Quận {{district}}</span>
                                            <br>
                                            <span>{{city}}</span>
                                            <br>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex">
                                    <a href="javascript:void(0)" class="blue-btn mx-2"><i
                                            class="fas fa-sync-alt"></i></a>
                                    <a href="javascript:void(0)" class="delete-btn mx-2"><i
                                            class="fas fa-times"></i></a>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>