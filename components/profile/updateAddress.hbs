<main>
    <div class="shop-section">
        <div class="container">
            <div class="card mb-5">
                <div class="row g-0">
                    <div class="col-lg-4 p-4">
                        <p class="fw-bold mb-3">Edit Address</p>
                        <p class="text-muted mb-3">
                            Edit your shipping address.
                        </p>
                    </div>
                    <div class="col-lg-8 p-4">
                        {{#with address}}
                        <form id="profile-form" method="post" action="/profile/address/update">
                            <div class="row">
                                <input type="hidden" name="id" value="{{id}}">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="receiver">Receiver Name</label>
                                        <input id="receivere" type="text" class="form-control" value="{{'receiver_name'}}"
                                            placeholder="Receiver Name" name="receiver" rules="required" />
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="tel">Tel</label>
                                        <input id="tel" type="text" class="form-control" placeholder="Tel" name="tel"
                                            rules="required|min:10|max:11" value={{telephone}} />
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="city">City</label>
                                        <input id="receiver-name" type="text" class="form-control" placeholder="City"
                                            name="city" rules="required" value="{{city}}" />
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="district">District</label>
                                        <input id="district" type="text" class="form-control" placeholder="District"
                                            name="district" rules="required" value="{{district}}" />
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="ward">Ward</label>
                                        <input id="ward" type="text" class="form-control" placeholder="Ward" name="ward"
                                            rules="required" value="{{ward}}" />
                                        <div class="invalid-feedback"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="address">Address</label>
                                <input class="form-control" type="text" placeholder="House No, Street Name"
                                    name="address" rules="required" value="{{'specific_address'}}" />
                                <div class="invalid-feedback"></div>
                            </div>
                            <div class="text-end">
                                <button class="btn">Save</button>
                            </div>
                        </form>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
    $(document).ready(() => {
        Validation('#profile-form');
    })
</script>